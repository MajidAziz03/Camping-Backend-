<% layout('layout/boilerplate')  %> 
<h1 class="text-center mb-4 mt-4"> Create a new Account </h1>
<form action="/register" method="post">
    <input class="form-control mb-3" type="text" name="username" placeholder="Enter your username" required>
    <input class="form-control mb-3" type="email" name="email" placeholder="Enter your email" required>
    <input class="form-control mb-3" type="number" name="number" placeholder="Enter your number">
    <input class="form-control mb-3" type="password" name="password" placeholder="Enter your password" required>
    <input class="form-control mb-3" type="password" name="cpassword" placeholder="confirm your password" required>
    <button class="btn btn-success mb-3 " > Register </button>
    <p> Already have an Account <a href="/login"> Click here </a></p>
</form>