<% layout('layout/boilerplate') %>
    <div class="container">
       
        <div class="card">
            <h1 class="mx-2 my-2">
                <%= camp.title %>
            </h1>
            <h2 class="mx-2 ">
                <%= camp.location %>
            </h2>
            <img src="<%= camp.image %> " alt="">
            <p class="mx-2 py-2">
                <%= camp.description %>
            </p>
            <p class="mx-2  text-secondary"> Price :
                <%= camp.price %>
            </p>
            <p><a class="btn btn-warning mx-2" href="/campgrounds/<%= camp._id %>/edit "> Edit this Campground </a></p>
            <form class="mb-3 mt-0 px-2 py-2" action="/campgrounds/<%= camp._id  %>?_method=delete" method="post">
                <a class="btn btn-secondary" href="/campgrounds"> Go-Back </a>
                <button class="btn btn-danger"> Delete </button>
            </form>
        </div>
    </div>
    <h2 class="mt-3 mx-3"> Leave a Review </h2>
    <form action="/campgrounds/<%= camp._id  %>/reviews" method="post">
        <div class="mb-3">
            <label for="rating" class="form-label"> </label>
            <input id="rating" class="form-range" type="range" name="range" min="1" max="6">
        </div>
        <div>
            <label for="review" class="form-label"> Review </label>
        </div>
        <div class="mb-2">
            <textarea name="review" id="review" cols="30" rows="3" class="form-review"></textarea>
        </div>
        <button class="btn btn-success "> submit </button>
    </form>